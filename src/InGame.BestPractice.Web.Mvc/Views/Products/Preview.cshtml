@model InGame.BestPractice.Store.Dto.ProductDto

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    @Model.Name
                </h2>

            </div>
        </div><div class="body">
            <div class="col-sm-6">
                @* ürün resimlerini upload etmediğim için rasgele bir resim kullandım *@
                <img src="~/images/user.png" width="200" height="200" alt="@Model.Name"/>
            </div>    <div class="col-sm-6">
                <table class="table">
                    <thead>
                        <tr>
                            <th>@L("Price")</th>
                            <th>@L("Description")</th>
                            <th>@L("Category")</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.Price</td>
                            <td>@Model.Description</td>
                            <td>@Model.CategoryName</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>  <div class="row ">
    <div class="col-xs-12">
        <a asp-action="Index" class="btn btn-default waves-effect">@L("Back")</a>
    </div>
    </div>
