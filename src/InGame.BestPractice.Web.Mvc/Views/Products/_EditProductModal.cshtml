@using System.Globalization
@using InGame.BestPractice.Store
@using InGame.BestPractice.Web.Models.Common.Modals
@using InGame.BestPractice.Web.Models.Store
@model InGame.BestPractice.Web.Models.Store.EditProductModalViewModel
@{
    Layout = null;
}
@Html.Partial("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditProduct")))

<div class="modal-body">
    <form name="UserEditForm" role="form" novalidate class="form-validation">
        <input type="hidden" name="Id" value="@Model.Product.Id" />


        <div class="row clearfix" style="margin-top:10px;">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="Name" type="text" name="Name" value="@Model.Product.Name" required maxlength="@Product.MaxNameLength" minlength="2" class="validate form-control">
                        <label for="Name" class="form-label">@L("Name")</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-sm-6">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input type="text" value="@Model.Product.Price.ToString(CultureInfo.InvariantCulture)" name="Price" class="form-control" required>
                        <label for="Price" class="form-label">@L("Price")</label>
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="ImageUrl" type="text" name="ImageUrl" value="@Model.Product.ImageUrl" required maxlength="@Product.MaxImageLength" class="validate form-control">
                        <label for="ImageUrl" class="form-label">@L("ImageUrl")</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="Description" type="tel" name="Description" value="@Model.Product.Description" maxlength="@Product.MaxDescriptionLength" class="validate form-control">
                        <label for="Description" class="form-label">@L("Description")</label>
                    </div>
                </div>
            </div>
        </div>  <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <label for="CategoryId" class="form-label">@L("Category")</label>

                    @Html.DropDownList("CategoryId", Model.Categories.Select(dto => new SelectListItem(dto.Name, dto.Id.ToString(), dto.Id == Model.Product.CategoryId)))
                </div>
                </div>
            </div>
            <div class="row clearfix">
                <div class="col-sm-12">
                    <div class="form-group form-float">
                        <div class="">
                            <input id="IsActive" type="checkbox" name="IsActive" value="true" @(Model.Product.IsActive ? "checked" : "") class="form-control" />
                            <label for="IsActive" class="form-label">@L("IsActive")</label>
                        </div>
                    </div>
                </div>
            </div>
    </form>
</div>

@Html.Partial("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")

<script src="~/view-resources/Views/Products/_EditProductModal.js" asp-append-version="true"></script>
